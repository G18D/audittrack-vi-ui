{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "api/**/*.py": {
      "runtime": "@vercel/python@4.3.0",
      "excludeFiles": "{**/__pycache__/**,**/*.pyc,**/tests/**}"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/main.py" },
    { "source": "/(.*)", "destination": "/$1" }
  ]
}
